#!/system/bin/sh
# TRIM fat on every boot

LOGCAT="log -p i -t boot_trim"
LOG=/system/etc/logs/boot_trim.log

function trim() {
    	# Mount system
    	$LOGCAT "Mounting /system";
    	mount -o remount,rw /system;
	
	# Check if log dir exists
	if [ ! -d /system/etc/logs ]; then
		$LOGCAT "Error: /system/etc/logs dir not found!";
	fi

    	# Create log file
    	$LOGCAT "Creating new LOG file";
    	date > $LOG;

    	if [ ! -e $LOG ]; then
        	$LOGCAT "Error: Unable to create logfile!"
    	fi

	$LOGCAT "Beginning 1 minute delay..."
    	sleep 60;
	$LOGCAT "Executing TRIM!"

    	# TRIM /system, if not F2FS
    	if ! mount | grep \/system | grep f2fs; then
    	    	$LOGCAT "Trimming /system...";
    		fstrim -v /system 2>&1 | tee -a $LOG;
    	else
        	$LOGCAT "Unable to trim /system";
        	echo "/system formatted as F2FS, TRIM not available!" | tee -a $LOG;
    	fi

    	# TRIM /data, if not F2FS
    	if ! mount | grep \/data | grep f2fs; then
        	$LOGCAT "Trimming /data...";
        	fstrim -v /data 2>&1 | tee -a $LOG;
    	else
        	$LOGCAT "Unable to trim /data";
        	echo "/data formatted as F2FS, TRIM not available!" | tee -a $LOG;
    	fi

    	# TRIM /cache, if not F2FS
   	if ! mount | grep \/cache | grep f2fs; then
        	$LOGCAT "Trimming /cache...";
        	fstrim -v /cache 2>&1 | tee -a $LOG;
    	else
        	$LOGCAT "Unable to trim /cache";
        	echo "/cache formatted as F2FS, TRIM not available!" | tee -a $LOG;
    	fi

    	$LOGCAT "/system/etc/10fstrim complete!";
}

$LOGCAT "Running /system/etc/10fstrim...";
trim &
